# Flake8 configuration for DeepStack Trainer
[flake8]
max-line-length = 120
extend-ignore = 
    E203,  # whitespace before ':' (conflicts with black)
    W503,  # line break before binary operator
    E501,  # line too long (handled by black)
    E402,  # module level import not at top of file (ML projects often need this)
    F401,  # imported but unused (sometimes needed for side effects)
    F403,  # star import used (common in ML projects)
    F405,  # name may be undefined (due to star imports)
    F811,  # redefinition of unused name (common in notebooks)
    C901,  # too complex (ML code can be complex)
    W291,  # trailing whitespace (handled by black)
    W292,  # no newline at end of file (handled by black)
    W293,  # blank line contains whitespace (handled by black)
exclude = 
    myenv,
    deepstack-trainer,
    __pycache__,
    .git,
    wandb,
    train-runs,
    *.pyc,
    .pytest_cache,
    .mypy_cache,
    .coverage,
    build,
    dist,
    *.egg-info
per-file-ignores =
    __init__.py:F401
    test_*.py:F401,F811
    *_test.py:F401,F811
max-complexity = 15
